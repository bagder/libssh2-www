ROOT=..
MAINPARTS= $(ROOT)/doctype.t $(ROOT)/body.t $(ROOT)/footer.t \
	$(ROOT)/setup.t $(ROOT)/menu.t $(ROOT)/css.t _example-templ.html
ACTION=fcpp -WWW -Uunix -H -I$(ROOT) -C -V -LL $< $@

# generated by mkexam.pl, assigns the EXAMPLES variable
-include Makefile.exhtml

all: $(EXAMPLES) index.html

index.html: index.t $(MAINPARTS) ../git-source/example/Makefile
	$(ACTION)

-include Makefile.examples

clean:
	rm -f $(EXAMPLES) *.et

scan:
	perl mkexam.pl
